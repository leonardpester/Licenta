<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Aplicatie"
        android:background="@drawable/background">

    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/recomandare"
            android:layout_width="210dp"
            android:layout_height="63dp"
            android:text="Recomandarea bucatarului"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="MissingConstraints"
            android:layout_marginBottom="612dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/bauturi"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:text="BAUTURI"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/recomandare" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/gustari"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:text="GUSTARI"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bauturi" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/pizza"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:text="PIZZA"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/gustari" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
    />
    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/mancare"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:text="Mancare"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pizza" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/confirmaComanda"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:text="CONFIRMA COMANDA"
            android:textSize="20sp"

            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/inapoi"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/inapoi"
            android:layout_width="163dp"
            android:layout_height="43dp"
            android:text="INAPOI"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="MissingConstraints"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>