<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Chelner">
    <TextView
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/text"
            android:height="20dp"
            android:textAlignment="center"
            android:layout_width="301dp"
            android:layout_height="225dp"
            android:textSize="24sp"
            android:text="Ati ales model de servire clasic. Apasati pe butonul 'CHELNER' pentru a chema un chelner, in caz contrat apasati pe butonul 'INAPOI' pentru a reveni la pagina initiala. "
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="107dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>



    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/chelner2"
            android:layout_width="163dp"
            android:layout_height="43dp"
            android:onClick="goMain"
            android:text="CHELNER"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/inapoi"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/inapoi"
            android:layout_width="163dp"
            android:layout_height="43dp"
            android:onClick="goMain"
            android:text="INAPOI"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>