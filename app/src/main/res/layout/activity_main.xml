<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:ignore="ExtraText"
        android:background="@drawable/background">

        android:back
    <TextView
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/admin"
            android:layout_width="108dp"
            android:layout_height="34dp"
            android:text="@string/staff"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:ignore="MissingConstraints"
            android:onClick="goAdminPage"
            tools:layout_editor_absoluteY="6dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/chelner"
            android:layout_width="248dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="533dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/cheama_un_chelner"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:onClick="goChelner"
    />

    <TextView
            android:background="@drawable/button"
            android:textColor="@color/colorText"
            android:id="@+id/aplicatie"
            android:layout_width="248dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/intra_in_aplicatie"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chelner"
            tools:ignore="MissingConstraints"
            android:onClick="goAplicatie"

    />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image1" app:layout_constraintHorizontal_bias="0.0"
            android:contentDescription="@string/todo"/>
</androidx.constraintlayout.widget.ConstraintLayout>